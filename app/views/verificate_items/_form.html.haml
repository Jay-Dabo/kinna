= render partial: 'shared/search_account', locals: {model: @verificate, account: 'verificate_item_account', description: 'verificate_item_description'}
= simple_form_for([@verificate, @verificate_item], wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.input :account
  = f.input :description

  = f.input :debit
  = f.input :credit

  .form-button-group
    .actions
      = f.submit class: 'btn btn-primary'

