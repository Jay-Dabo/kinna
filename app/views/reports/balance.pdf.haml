- save_class = ''
%table.wrapper
  %tr
    %td{colspan: '2'}
      .pull-left
        %h1= t(:balance)
      .pull-right
        %h1= @accounting_period.name
  %tr
    %td.sale_item_wrapper{colspan: '2'}
      %table.table.table-striped
        - @verificate_items.each do |item|
          - if save_class != item.cls
            - save_class = item.cls
            %tr.filler
              %td{colspan:'5'} &nbsp;
            %tr
              %th{colspan: '2'}=item.cls_desc
              %th.numeric= t(:ib)
              %th.numeric= t(:change)
              %th.numeric= t(:ub)
          - if !item.ver.nil? || !item.ib.nil?
            - ver = item.ver.nil? ? 0 : item.ver
            - ib = item.ib.nil? ? 0 : item.ib
            - sum = ib + ver
            %tr
              %td.short=item.acc
              %td= item.desc
              %td.numeric= item.ib
              %td.numeric= item.ver
              %td.numeric= sum

